{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Html Build",
            "type": "shell",
            "command": "./build.sh html", 
        }
        {
            "label": "Release",
            "type": "shell",
            "command": "cp -r -v ${workspaceRoot}/output/* ${workspaceRoot}/../xqguo.github.io", 
        }
        {
            "label": "Push",
            "type": "shell",
            "command": "cd ${workspaceRoot}/../xqguo.github.io && git pull && git add -A && git commit -asm 'update' && git push", 
        }
        {
            "label": "Build",
            "dependsOn": ["Html Build", "Release", "Push"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }        
    ]
}